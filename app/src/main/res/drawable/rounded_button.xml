<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Bordes más redondeados -->
            <solid android:color="#4B0082" /> <!-- Color morado oscuro cuando se presiona -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Bordes más redondeados -->
            <solid android:color="#6A5ACD" /> <!-- Color morado cuando no está presionado -->
        </shape>
    </item>
</selector>
